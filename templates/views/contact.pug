extends ../layouts/default

block intro
	header
		h1.category_name  Skontaktuj się ze mną
block content
	.container.contact_form
		if enquirySubmitted
			h3 Thanks for getting in touch.
		else
			.row: .col-sm-8.col-md-6
				form(method='post')
					input(type='hidden', name='action', value='contact')
					.form-group(class=validationErrors.name ? 'has-error' : null)
						label Imię i Nazwisko
						input(type='text', name='name.full', value=formData['name.full']).form-control
					.form-group(class=validationErrors.email ? 'has-error' : null)
						label Email
						input(type='email', name='email', value=formData.email).form-control
					.form-group(class=validationErrors.message ? 'has-error' : null)
						label Wiadomość
						textarea(name='message', placeholder='Napisz do mnie wiadomość...' rows=5).form-control= formData.message
					.form-actions
						button(type='submit').btn.btn-primary Wyślij
